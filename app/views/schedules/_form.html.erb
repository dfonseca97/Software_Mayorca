  <% end %>

<body>
<div class="container">
  <div class="field">
    <%= form.label "Nombre*" %>
    <%= form.text_field :name, id: :activity_name, :required => true, oninvalid: 'this.setCustomValidity("Este campo no debe estar vacío.")', oninput: 'this.setCustomValidity("")'%>
  </div>
  <div class="field">
    <%= form.label "Día 1*" %>
    <%= form.text_field :day_1, id: :schedule_day_1, :required => true, oninvalid: 'this.setCustomValidity("Este campo no debe estar vacío.")', oninput: 'this.setCustomValidity("")' %>
  </div>
  <div class="field">
    <%= form.label "Día 2*" %>
    <%= form.text_field :day_2, id: :schedule_day_2, :required => true, oninvalid: 'this.setCustomValidity("Este campo no debe estar vacío.")', oninput: 'this.setCustomValidity("")' %>
  </div>
  <div class="field">
    <%= form.label "Día 3*" %>
    <%= form.text_field :day_3, id: :schedule_day_3, :required => true, oninvalid: 'this.setCustomValidity("Este campo no debe estar vacío.")', oninput: 'this.setCustomValidity("")' %>
  </div>
  <div class="field">
    <%= form.label "Día 4" %>
    <%= form.text_field :day_4, id: :schedule_day_4 %>
  </div>
  <div class="field">
    <%= form.label "Día 5" %>
    <%= form.text_field :day_5, id: :schedule_day_5 %>
  </div>
  <div class="field">
    <%= form.label "Hora de inicio*" %>
