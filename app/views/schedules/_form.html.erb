  </div>
    <div class="field">
    <%= form.label "Activa" %>
        <br>
    <%= form.check_box :active, id: :activity_active %>
  </div>
  <br>

  <div class="actions">
    <%= form.submit 'Crear actividad' %>
  </div>
<% end %>

</div>

